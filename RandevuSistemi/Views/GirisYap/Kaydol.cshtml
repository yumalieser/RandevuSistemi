@model RandevuSistemi.Models.Kullanici

@{
    ViewData["Title"] = "Kaydol";
}

<h2>Kaydol</h2>

<form asp-action="Kaydol" method="post">
    <div class="form-group">
        <label asp-for="KullaniciAd" class="control-label"></label>
        <input asp-for="KullaniciAd" class="form-control" />
        <span asp-validation-for="KullaniciAd" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KullaniciSoyad" class="control-label"></label>
        <input asp-for="KullaniciSoyad" class="form-control" />
        <span asp-validation-for="KullaniciSoyad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KullaniciMail" class="control-label"></label>
        <input asp-for="KullaniciMail" class="form-control" />
        <span asp-validation-for="KullaniciMail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KullaniciSifre" class="control-label"></label>
        <input asp-for="KullaniciSifre" class="form-control" type="password" />
        <span asp-validation-for="KullaniciSifre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KullaniciTuru" class="control-label"></label>
        <select asp-for="KullaniciTuru" class="form-control">
            <option value="1">Normal Kullanıcı</option>
            <option value="2">Randevu Oluşturabilen Kullanıcı</option>
        </select>
        <span asp-validation-for="KullaniciTuru" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydol" class="btn btn-primary" />
    </div>
</form>

<div>
    Zaten bir hesabınız var mı? <a asp-action="Index">Giriş Yap</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}</div>