@model IEnumerable<Randevu>
@{
    ViewData["Title"] = "AktifRandevuListele";
    Layout = "~/Views/Shared/_YonetimLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Aktif Onaylanmış Randevular</h4>
                <p class="card-description">
                    Aktif onaylanmış tüm randevulara buradan erişebilirsiniz.
                </p>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> ID </th>
                                <th> Randevu Türü </th>
                                <th> Randevu Tarihi </th>
                                <th> İşlemler </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.RandevuID </td>
                                    <td> @item.RandevuTur</td>
                                    <td> @item.RandevuSuresi </td>
                                    <td>
                                        <a href="#" style="font-size: 23px;">
                                            <i class="fa fa-eye px-1"></i>
                                            <i class="fa fa-pencil"></i>
                                            <a href="/Yonetim/RandevuSil/@item.RandevuID"><i class="mdi mdi-delete" style="font-size: 23px;"></i></a>
                                        </a>
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>    
                </div>
            </div>
        </div>
    </div>
</div>

